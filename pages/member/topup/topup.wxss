.topup {
    padding: 10rpx 2.5% 10rpx 2.5%;
    height: 70rpx;
    float: left;
    border-bottom: 1rpx solid #cccccc;
    width: 100%;
}

.topup>view {
    float: left;
    width: 33.33%;
    text-align: center;
    line-height: 70rpx;
    font-size: 27rpx;
}

.payment {
    font-size: 27rpx;
    padding: 0 2.5% 0 2.5%;
    height: 100rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    line-height: 100rpx;
}

.payment>text {
    color: red;
    font-size: 32rpx;
}

.payment>button {
    position: absolute;
    right: 100rpx;
    width: 300rpx;
    height: 70rpx;
    background: rgb(255,223,62);
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32rpx;
}

.num {
    margin-left: 10%;
    width: 185rpx;
    height: 40rpx;
    margin-top: 10rpx;
    border-radius: 15rpx;
    border: 1px solid black;
    overflow: hidden;
}

.num>view {
    line-height: 40rpx;
    float: left;
    height: 100%;
    width: 60rpx;
}