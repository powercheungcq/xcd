    float: lef;
    margin-left: 80rpx;
    width: 120rpx;
    color: #fff;
}

.cart-no-data {
    padding: 40rpx 0;
    color: #999;
    text-align: center;
}

.priceRight {
    float: left;
    line-height: 50rpx;
    margin-left: 65rpx;
}

.titleLeft {
    margin-left: 70rpx;
}