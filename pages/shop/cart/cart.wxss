.cart-box {
    padding-bottom: 100rpx;
}

view {
    background: #fff;
    padding: 0rpx 0rpx;
    margin: 0rpx;
}

.cart-list {
    position: relative;
    padding: 20rpx 20rpx 20rpx 285rpx;
    height: 185rpx;
    border-bottom: 1rpx solid #e9e9e9;
}

.cart-list .cart-pro-select {
    position: absolute;
    left: 20rpx;
    top: 90rpx;
    width: 45rpx;
    height: 45rpx;
}

.cart-list .cart-thumb {
    position: absolute;
    top: 20rpx;
    left: 85rpx;
    width: 250rpx;
    height: 187.5rpx;
}

.cart-list .cart-pro-name {
    display: inline-block;
    width: 300rpx;
    height: 105rpx;
    line-height: 50rpx;
    overflow: hidden;
}

.cart-list .cart-pro-price {
    display: inline-block;
    float: right;
    height: 105rpx;
    line-height: 50rpx;
}

.cart-list .cart-count-box {
    position: absolute;
    left: 340rpx;
    bottom: 20rpx;
    width: 250rpx;
    height: 60rpx;
}

.cart-list .cart-count-box text {
    display: inline-block;
    text-align: center;
}

.cart-count-down,.cart-count-add {
    font-size: 60rpx;
    font-weight: normal;
    width: 55rpx;
    height: 55rpx;
    line-height: 50rpx;
    border: 1rpx solid #eee;
    color: #8b470fcb;
}

.cart-count-num {
    width: 150rpx;
    height: 55rpx;
    border: 1px solid #f2f2f2;
}

.cart-del {
    position: absolute;
    right: 20rpx;
    bottom: 70rpx;
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 60rpx;
    color: red;
}

.cart-footer {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 120rpx;
    line-height: 120rpx;
    padding: 0 200rpx 0 80rpx;
    box-sizing: border-box;
    background: #666;
    color: #fff;
}

.total-select {
    position: absolute;
    left: 20rpx;
    top: 25rpx;
    width: 45rpx;
    height: 45rpx;
}

.order-icon {
    position: absolute;
    right: 0rpx;
    top: 0rpx;
    width: 150rpx;
    height: 120rpx;
    color: #000;
    background: #ffdf3e;
    padding-left: 90rpx;
}

