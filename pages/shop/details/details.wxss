view {
    background: #fff;
    padding: 0rpx;
}

.goods-box {
    position: relative;
    padding: 0rpx 10rpx;
    text-align: left;
    color: #454552;
}

.goods-box .goods-thumb {
    width: 300rpx;
    margin: 10rpx 0 0rpx;
}

input {
    margin-left: 0rpx;
}

.viewprice {
    margin-top: -10rpx;
}

.myadd {
    width: 100%;
    height: 120rpx;
    background: #ffdf3e;
    color: #000;
    line-height: 120rpx;
    display: flex;
    justify-content: center;
}

.twoHeight {
    line-height: 45rpx;
}

.drawer_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
}

.drawer_box {
    width: 100%;
    height: 400rpx;
    overflow: hidden;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 2001;
    background: #fefffe;
    border-radius: 3px;
}

.drawer_title {
    text-align: center;
    height: 80rpx;
    border-bottom: 1px solid #ccc;
}

.drawer_content {
    height: 100%;
    position: relative;
    overflow-y: scroll;
}

.cancel {
    font-size: 50rpx;
    color: #666;
    position: fixed;
    left: 30rpx;
    top: 0rpx;
}

.titleTextHasWidth {
    width: 120rpx;
    line-height: 80rpx;
    margin-left: 5rpx;
}

.choose {
    font-size: 36rpx;
    color: #000;
    position: fixed;
    left: 50%;
    line-height: 70rpx;
    margin-left: -60rpx;
}

.cart-count-box {
    padding-top: 13rpx;
    padding-left: 94rpx;
    height: 55rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.cart-count-down,.cart-count-add {
    font-size: 60rpx;
    font-weight: normal;
    width: 55rpx;
    height: 55rpx;
    line-height: 50rpx;
    text-align: center;
    border: 1rpx solid #eee;
    color: #8b470fcb;
}

.cart-count-num {
    width: 180rpx;
    height: 55rpx;
    border: 1px solid #f2f2f2;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
}

.btnnew {
    width: 94%;
    background: #ffdf3e;
    display: flex;
    float: left;
    height: 80rpx;
    border: 1px solid #ccc;
    border-radius: 10rpx;
    margin-right: 0rpx;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    margin-left: 20rpx;
    margin-top: 25rpx;
}