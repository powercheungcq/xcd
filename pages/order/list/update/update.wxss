view {
    background: #fff;
    padding: 0rpx 0rpx;
    margin: 0rpx;
}

.modify-form form {
    display: block;
    padding: 10rpx 10rpx;
}

.label-list {
    display: flex;
    width: 100%;
    height: 80rpx;
    align-items: center;
    border-bottom: 1px solid #e8e8e8;
}

.place {
    display: flex;
    align-items: center;
    font-size: 28rpx;
}

.label {
    width: 130rpx;
}

.label-list .label {
    color: #333;
    font-size: 28rpx;
}

.label-list input {
    padding-left: 20rpx;
    flex: 1;
    color: #666;
    font-size: 28rpx;
}

.label-list image {
    height: 80rpx;
    width: 80rpx;
}

button::after {
    border: none;
}

.label-lists {
    justify-content: space-between;
}

.submit {
    margin-top: 10rpx;
    width: 90%;
    background-color: #ffdf3e;
    color: #000;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 28rpx;
}

.radio-group label {
    padding-left: 30rpx;
    font-size: 36rpx;
}